{
  "name": "@buddy-connect/backend",
  "version": "1.0.0",
  "description": "Backend server for Buddy Connect application with Firebase",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "clean": "rimraf dist && rimraf node_modules",
    "emulators": "firebase emulators:start --only functions --debug",
    "emulators:all": "firebase emulators:start --debug",
    "test": "echo \"Error: no test specified\" && exit 1",
    "emulate:cors": "firebase emulators:start --project=buddy-connect-f1215 --only functions,firestore,auth"
  },
  "keywords": [
    "express",
    "api",
    "backend",
    "firebase",
    "firestore",
    "buddy-connect"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@buddy-connect/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.9.0",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "firebase-tools": "^12.9.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
